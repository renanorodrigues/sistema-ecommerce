<div class="container d-flex align-middle justify-content-center">
  <div class="row">
    <h2 class="mt-4">Login</h2>

    <%= form_with(model: @usuario, url: session_index_path) do |form| %>
      <%= render partial: 'shared/validation' %>

      <div class="col-md-12 mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.text_field :email, class: "form-control" %>
      </div>

      <div class="col-md-12 mb-3">
        <%= form.label :senha, class: "form-label" %>
        <%= form.password_field :senha, class: "form-control" %>
      </div>

      <%= form.submit 'Submeter', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>