<div class="container">
  <div class="mt-3">
    <% if flash[:success] %>
      <div class="alert alert-success" role="alert">
        <%= flash[:success].html_safe %>
      </div>
    <% end %>

    <div class="row col-md-3">
      <%= render partial: 'shared/breadcrumb', locals: { categoria: "Todas as categorias" } %>
    </div>

    <div class="row">
      <% @produtos.map do |produto| %>
        <%= render partial: 'shared/card_produto', locals: { produto: produto } %>
      <% end %>
    </div>
  </div>
</div>