<div class="container d-flex flex-column">
  <div class="justify-content-center">
    <div class="row">
      <p id="notice"><%= notice %></p>
    </div>

    <div class="row">
      <h2 class="mt-4">Usuários</h2>
    </div>

    <table>
      <thead>
        <tr>
          <th>Nome</th>
          <th>Email</th>
          <th>Endereco</th>
          <th>Login</th>
          <th>Administrador</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @usuarios.each do |usuario| %>
          <tr>
            <td><%= usuario.nome %></td>
            <td><%= usuario.email %></td>
            <td><%= usuario.endereco %></td>
            <td><%= usuario.login %></td>
            <td><%= usuario.administrador %></td>
            <td><%= link_to 'Exibir', loja_usuario_path(usuario), class: 'btn btn-info' %></td>
            <td><%= link_to 'Editar', edit_loja_usuario_path(usuario), class: 'btn btn-info' %></td>
            <td><%= link_to 'Remover', loja_usuario_path(usuario), method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'btn btn-warning' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Novo Usuario', new_loja_usuario_path, class: 'btn btn-primary text-white' %>
  </div>
</div>