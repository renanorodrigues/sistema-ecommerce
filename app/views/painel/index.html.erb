<div class="container">
  <div class="mt-3">
    <% if flash[:success] %>
      <div class="alert alert-success" role="alert">
        <%= flash[:success].html_safe %>
      </div>
    <% end %>

    <%= link_to "Editar conta", edit_loja_usuario_path(@usuario) %>

    <div class="section-product">
      <div class="row">
        <h2 class="mt-4">CRUD de Produtos</h2>
      </div>

      <%= link_to "Painel de Produtos", produtos_path %>
    </div>

    <div class="section-category">
      <div class="row">
        <h2 class="mt-4">CRUD de Categorias</h2>
      </div>

      <%= link_to "Painel de Categorias", categorias_path %>
    </div>
  </div>
</div>